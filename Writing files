#include <stdio.h>
#include <stdlib.h>


int main()
{
    
    FILE *fpointer = fopen("files.txt", "w");
    fprintf(fpointer, "This will be printed in a new text file");
    
    FILE *fpointer = fopen("files.txt", "a");
    fprintf(fpointer, "\nThis will add more text to the existing file")
    
    fclose(fpointer);
	
	return 0;
}
