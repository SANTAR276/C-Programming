#include <stdio.h>
#include <string.h>

int main(){

    char text[10001];
    int count = 0;

    printf("Enter your text: \n");
    scanf("%[^\n]s", text);

    char *ptr = strtok(text, " .,");

    while(ptr != NULL){
        if(ptr != NULL && strcmp(ptr, "the") == 0){
            count++;
        }
        ptr = strtok(NULL, " .,");
    }

    printf("the number of 'the's in your text was: %d", count);
    return 0;
}
