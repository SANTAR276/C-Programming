#include<stdio.h>
#include<string.h>

int main(){
    int age;
    char name[99];

    printf("Enter your full name: ");
    fgets(name, 99, stdin);
    name[strlen(name) -1] = '\0';

    printf("Enter your age: ");
    scanf("%d", &age);
    
    printf("Hello, %s, you are %d years old", name, age);

    return 0;
}
