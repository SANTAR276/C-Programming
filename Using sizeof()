#include <stdio.h>

int main(){
    double nums[] = {5.0, 10.0, 15.0, 20.0, 25.0, 30.0};

    printf("the size of the arry nums[] is %d bytes\n\n\n", sizeof(nums));

    for(int i = 0; i < sizeof(nums)/sizeof(nums[0]); i++){              // the line "sizeof(nums)/ sizeof(nums[0])" allows you to print the exact number of elements in nums[]
        printf("%.1f\n", nums[i]);
    }

    return 0;
}
