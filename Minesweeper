#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main(){

    int row, col;
    int count = 0;

    printf("Enter the # of rows: ");
    scanf("%d", &row);
    
    printf("Enter the # of columns: ");
    scanf("%d", &col);

    char **m = malloc(sizeof(char *) * row);

    for(int i = 0; i < row; i++){
        m[i] = malloc(sizeof(char) * (col + 1));
    }

    for(int i = 0; i < row; i++){
        scanf("%s", m[i]);
    }

    for(int i = 0; i < row; i++){
        for(int j = 0; j < col; j++){
            if(m[i][j] == '*'){
                printf("%c", m[i][j]);
                continue;
            }
            else{
                m[i][j] = 0;

                for(int x = i - 1; x <= i + 1; x++){
                    for(int y = j - 1; y <= j + 1; y++){
                        if(x < 0 || y < 0 || x >= row || y >= col){
                            continue;
                        }
                        else if(m[x][y] == '*'){
                            m[i][j] += 1;
                        }
                    }
                }
                printf("%d", m[i][j]);
            }
        }
        printf("\n");
    }

    for(int i = 0; i < row; i++){
        free(m[i]);
    }

    free(m);

    return 0;
}
